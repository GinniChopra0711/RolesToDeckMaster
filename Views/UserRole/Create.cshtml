@model Web_Security_Lab_Day3.ViewModels.UserRoleVM
<div b-6eg8tbgho9="" style="text-align: center;">
    <div b-6eg8tbgho9="" class="display-6"><strong b-6eg8tbgho9="">Deck Master</strong></div>
</div>
<h4>Assign User Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>
            <div class="form-group">
                <!-- This shows the label. -->
                <label asp-for="Email" class="control-label"></label>

                <!-- Drop down for List of strings with user selected. -->
                @Html.DropDownList("Email",
                new SelectList(ViewBag.UserSelectList, "Value"
                , "Text",
                ViewBag.SelectedUser), "Select User",
                new { @id = "userDD", @class = "form-control" })

                <!-- This shows validation for
                     dropdown of 'Email' property. -->
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>

                <!-- Drop down for SelectList with
                    'Value' and 'Text' properties. -->
                @Html.DropDownList("Role",
                new SelectList(ViewBag.RoleSelectList, "Value", "Text"),
                "Select Role",
                new { @id = "roleDD", @class = "form-control" })

                <!-- This shows validation for
                     dropdown of 'Role' property. -->
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Assign"
                       class="btn btn-default" style="background-color:#26C6DA;"
            </div>
        </form>

        <p>
            <a asp-controller="UserRole"
               asp-action="Index" style="color:#26C6DA;">Back to Users</a>
        </p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
